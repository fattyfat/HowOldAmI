<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fatty.howoldami.MainActivity">

    <TextView
        android:text="請輸入您的生日"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textSize="28dp"
        android:gravity="center"
        android:background="@color/calenderColor" />

    <LinearLayout
        android:id="@+id/yearMonthTextViewDateLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:text="年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearTextView"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_above="@+id/yearTextFields"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <TextView
            android:text="月"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MonthTextView"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:text="日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateTextView"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:text="確定"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:textSize="36dp"
        android:background="@color/buttonColor"
        android:layout_below="@+id/yearMonthDateTextFieldLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_below="@+id/textFrameBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_alignTop="@+id/tableLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalYears"
                android:textSize="20dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalMonths"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalWeeks"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalDays"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalHours"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalMinutes"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Total Seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="22dp"/>

            <TextView
                android:text="          0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalSeconds"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/howOldAmILayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp">

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/enterButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/howOldAmIYear"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="歲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/howOldAmI"
            android:textSize="24dp"
            android:layout_alignBaseline="@+id/textView24"
            android:layout_alignBottom="@+id/textView24"
            android:layout_toRightOf="@+id/textView24"
            android:layout_toEndOf="@+id/textView24"
            android:gravity="center"
            android:layout_weight="0.79" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/howOldAmIMonth"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/howOldAmI"
            android:layout_alignBottom="@+id/howOldAmI"
            android:layout_toRightOf="@+id/howOldAmI"
            android:layout_toEndOf="@+id/howOldAmI"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="月"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:textSize="24dp"
            android:layout_alignBaseline="@+id/howOldAmIMonth"
            android:layout_alignBottom="@+id/howOldAmIMonth"
            android:layout_toRightOf="@+id/howOldAmIMonth"
            android:layout_toEndOf="@+id/howOldAmIMonth"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/howOldAmIDate"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/textView26"
            android:layout_alignBottom="@+id/textView26"
            android:layout_toRightOf="@+id/textView26"
            android:layout_toEndOf="@+id/textView26"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:textSize="24dp"
            android:layout_alignBaseline="@+id/howOldAmIDate"
            android:layout_alignBottom="@+id/howOldAmIDate"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yearMonthDateTextFieldLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearMonthTextViewDateLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/yearTextFields"
            android:layout_above="@+id/enterButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:maxLength="4"
            android:gravity="center"
            android:text="1970" />

        <TextView
            android:text="/"
            android:textSize="24dp"
            android:layout_above="@+id/enterButton"
            android:layout_alignParentLeft="@+id/yearTextFields"
            android:layout_alignParentRight="@+id/monthTextField"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/betweenYearAndMonthTextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/monthTextField"
            android:layout_weight="1"
            android:maxLength="2"
            android:gravity="center"
            android:text="01" />

        <TextView
            android:text="/"
            android:textSize="24dp"
            android:layout_above="@+id/enterButton"
            android:layout_alignParentLeft="@+id/monthTextField"
            android:layout_alignParentRight="@+id/dateTextField"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/betweenMonthAndDateTextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateTextField"
            android:layout_weight="1"
            android:maxLength="2"
            android:gravity="center"
            android:text="01" />
    </LinearLayout>

    <TextView
        android:id="@+id/textFrameBottom"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howOldAmILayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="﹎﹎﹎﹎﹎﹎﹎﹎﹎﹎" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
